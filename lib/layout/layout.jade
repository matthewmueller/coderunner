doctype 5
html
  head
    title #{title}

    - description="Matthew Mueller is a web developer, designer, entrepreneur, and minimalist."

    //- Meta
    meta(name="description", content=description)
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width")

    //- OG
    meta(property="og:title", content="#{title}")
    meta(property="og:description", content=description)

    //- Favicon
    //- link(rel="shortcut icon", href="/favicon.png")

    //- Authorship
    link(rel="author", href="https://plus.google.com/113710016286145697745/posts")

    //- http://support.google.com/webmasters/bin/answer.py?hl=en&answer=139394
    link(rel="canonical", href="http://automon.io")

    block styles
      link(rel='stylesheet', href='/build.css')
      //- link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,900,400italic')
  body
    block content
    block scripts
      script(src='/build.js')
      script require('layout')
